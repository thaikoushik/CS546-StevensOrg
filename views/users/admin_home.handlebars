<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h1>This is home for admin</h1>
       <span class="glyphicon glyphicon-plus" aria-hidden="true"></span><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#eventCreate"><i class="fa fa-search"></i> Create Event</button>
        
       
           <!-- <input type="hidden" name="_csrf" value="{{ csrfToken }}">-->
     </div>
</div>

<div class="modal fade" id="eventCreate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Event</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="contactForm" action="/admin/createEvent" method="post" enctype="multipart/form-data" data-toggle="validator">
        <label class="nav-link disabled">*All fields are required</label>
           <div class="form-group">
                <lable for="eventName">Event Name</lable>
                <input type="text" id="eventName" name="eventName" class="form-control" data-error="Event Name is missing" required>
                <div class="help-block with-errors"></div>
            </div>

            <div class="form-group">
                <lable for="organizerName">Organizer Name</lable>
                <input type="text" id="organizerName" name="organizerName" class="form-control" data-error="Organizer is missing" required disabled>
                <div class="help-block with-errors"></div>
            </div>

            <div class="form-group">
                <lable for="tickets">Tickets</lable>
                <input type="text" id="tickets" name="tickets" class="form-control" data-error="Tickets is missing" required>
                <div class="help-block with-errors"></div>
            </div>

            <div class="form-group">
                <lable for="image">Image</lable>
                <input type="file" id="image" name="image" class="form-control">
                <div class="help-block with-errors"></div>
            </div>

            <div class="form-group">
                <lable for="ticketPrice">Ticket Price</lable>
                <input type="text" id="ticketPrice" name="ticketPrice" class="form-control" data-error="Ticket price is missing" required>
                <div class="help-block with-errors"></div>
            </div>
             <button type="submit" class="btn btn-primary">Save changes</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
       
      </div>
    </div>
  </div>
</div>