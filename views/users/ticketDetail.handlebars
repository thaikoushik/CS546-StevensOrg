<div id="page-wrap">

    <label id="header">TICKET INVOICE</label>

    <div id="identity">

        <label id="address2">
            {{contactInfo.name}} 
            {{contactInfo.phone}} 
            {{contactInfo.email}}
        </label>

    </div>

    <div id="customer">

        <label id="customer-title">StevensOrg</label>

        <table id="meta">
            <tr>
                <td class="meta-head">Invoice ID</td>
                <td>
                    <label>{{ticketDetails._id}}</label>
                </td>
            </tr>
            <tr>

                <td class="meta-head">EventDate</td>
                <td>
                    <label>{{ticketDetails.eventDate}}</label>
                </td>
            </tr>
        </table>

    </div>

    <table id="items">

        <tr>
            <th>Item</th>
            <th>Description</th>
            <th>No. ofUnit</th>
            <th>TransactionId</th>
            <th>Price</th>
        </tr>

        <tr class="item-row">
            <td class="item-name">
                <div class="delete-wpr">
                    <label>{{ticketDetails.eventName}}</label>
                </div>
            </td>

            <td class="description">
                <label>{{ticketDetails.description}}</label>
            </td>
            <td>
                <label class="unit">1</label>
            </td>
            {{# if paymentInfo.transactionId }}
            <td>
                <span class="price">{{paymentInfo.transactionId}}</span>
            </td>
            {{ else}}
            <td>
                <span class="price">No Payment Done</span>
            </td>
            {{/if}}
            <td>
                <label class="cost">{{ticketDetails.ticketPrice}}$</label>
            </td>
        </tr>


        <tr>

            <td colspan="2" class="blank"> </td>
            <td colspan="2" class="total-line">Total</td>
            <td class="total-value">
                <div id="total">{{ticketDetails.ticketPrice}}$</div>
            </td>
        </tr>
    </table>

    <div id="terms">
        <h5>Terms</h5>
        <label>Please Bring this ticket for the event </label>
    </div>

</div>